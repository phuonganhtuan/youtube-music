<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YoutubeMusic" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF0066</item>
        <item name="colorPrimaryVariant">#B50048</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins_pat_vietnamese_medium</item>
    </style>

    <style name="TabTextCustom">
        <item name="tabTextColor">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowRadius">16</item>
        <item name="android:capitalize">words</item>
    </style>

    <style name="TabTextCustomBlack">
        <item name="tabTextColor">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowRadius">16</item>
        <item name="android:capitalize">words</item>
    </style>
</resources>
